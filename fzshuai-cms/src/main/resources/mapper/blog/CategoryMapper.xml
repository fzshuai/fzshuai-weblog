<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fzshuai.blog.mapper.CategoryMapper">

    <resultMap type="com.fzshuai.blog.domain.Category" id="CategoryResult">
        <result property="categoryId" column="category_id"/>
        <result property="categoryName" column="category_name"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="listCategoryDTO" resultType="com.fzshuai.blog.domain.dto.CategoryDTO">
        SELECT c.id,
               c.category_name,
               COUNT(a.id) AS article_count
        FROM blog_category c
                 LEFT JOIN (SELECT id, category_id
                            FROM blog_article
                            WHERE is_delete = 0
                              AND `status` = 1) a N c.id = a.category_id
        GROUP BY c.id
    </select>

    <select id="selectNameById" resultType="string">
        select category_name
        from blog_category
        where category_id = #{id}
    </select>

    <select id="selectIdByName" resultType="long">
        select id
        from blog_category
        where category_name = #{name}
    </select>

</mapper>
